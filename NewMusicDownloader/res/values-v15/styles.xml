    </style>

    <style name="AppBaseTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppBaseTheme.NoFonts" parent="Theme.AppCompat"></style>

    <style name="AppBaseTheme.DarkActionBar.NoFonts" parent="Theme.AppCompat.Light.DarkActionBar"></style>

