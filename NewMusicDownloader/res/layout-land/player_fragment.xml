<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <ImageButton
                android:id="@+id/player_lyrics"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/selectable_item_bg"
                android:src="@drawable/ic_player_lyrics" />

            <ImageButton
                android:id="@+id/player_edit_tags"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/selectable_item_bg"
                android:src="@drawable/ic_player_edit" />
        </LinearLayout>

        <ImageView
            android:id="@+id/albumCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/no_cover_art_big" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/songInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/holo_transparent_button"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <TextView
                    android:id="@+id/artistName"
                    style="@style/InfoSubText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/songName"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal" />

                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/artistName"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp" >

                    <TextView
                        android:id="@+id/trackTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/trackTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trackTime" >

                        <SeekBar
                            android:id="@+id/progress_track"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:progress="0" />

                        <ProgressBar
                            android:id="@+id/player_wait_song"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="true"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp" />
                    </FrameLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/songName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/artistName"
                    android:layout_alignParentTop="true"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/shuffle"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_shuffle" />

                <ImageButton
                    android:id="@+id/prev"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_previous" />

                <ImageButton
                    android:id="@+id/playpause"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/stop"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_stop" />

                <ImageButton
                    android:id="@+id/next"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_next" />

                <ImageButton
                    android:id="@+id/repeat"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_repeat" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/volume_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp" >

                <SeekBar
                    android:id="@+id/progress_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:max="100"
                    android:progress="0" />

                <ImageView
                    android:id="@+id/volume_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_action_volume" />
            </RelativeLayout>

            <Button
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/download" />

            <include
                android:id="@+id/player_edit_tag_dialog"
                layout="@layout/edit_tag"
                android:visibility="gone" />

            <include
                android:id="@+id/player_lyrics_frame"
                layout="@layout/lyrics_frame"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>