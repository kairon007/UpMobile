<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/albumCover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/no_cover_art_big"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/songInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/holo_transparent_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/songName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:ellipsize="marquee"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/textViewColor"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/artistName"
                        style="@style/InfoSubText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/songName"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal"
                        android:textColor="?attr/textViewColor"/>

                    <RelativeLayout
                        android:id="@+id/progress_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/artistName"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/trackTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="8dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="?attr/textViewColor"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/trackTotalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:paddingRight="8dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="?attr/textViewColor"
                            android:textSize="12sp"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/trackTime">

                            <SeekBar
                                android:id="@+id/progress_track"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:progress="0"/>

                            <ProgressBar
                                android:id="@+id/player_wait_song"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminate="true"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"/>
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/shuffleParent"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/shuffle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:clickable="false"
                            android:src="?attr/mediaShuffle"/>

                        <TextView
                            android:id="@+id/shuffleMode"
                            android:layout_width="16dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center|right"
                            android:text="A"
                            android:textColor="?attr/textViewColor"
                            android:visibility="visible"/>
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/prev"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:src="?attr/mediaPrevious"/>

                    <ImageButton
                        android:id="@+id/playpause"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:src="?attr/mediaPlay"/>

                    <ImageButton
                        android:id="@+id/stop"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:src="?attr/mediaStop"/>

                    <ImageButton
                        android:id="@+id/next"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:src="?attr/mediaNext"/>

                    <ImageButton
                        android:id="@+id/repeat"
                        style="@style/PlayerButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selectable_item_bg"
                        android:src="?attr/mediaRepeat"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/volume_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="2dp">

                    <SeekBar
                        android:id="@+id/progress_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:max="100"
                        android:progress="0"/>

                    <ImageView
                        android:id="@+id/volume_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="?attr/actionVolume"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/downloadedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/has_been_downloaded"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/textViewColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/showButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/view_in_library"/>

                    <Button
                        android:id="@+id/btn_download"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/download_dialog_download"/>

                </LinearLayout>

                <include
                    android:id="@+id/player_edit_tag_dialog"
                    layout="@layout/edit_tag"
                    android:visibility="gone" />

                <include
                    android:id="@+id/player_lyrics_frame"
                    layout="@layout/lyrics_frame"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>