<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <ImageView
        android:id="@+id/navigation_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/navmenusection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/navigation_image"
        android:layout_toRightOf="@+id/navigation_image"
        android:ellipsize="end"
        android:text="@string/download_dialog_download_location"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ru.johnlife.lifetoolsmp3.ui.widget.text.EllipsizingTextView
        android:id="@+id/navmenusection_path"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navmenusection_title"
        android:ellipsize="start"
        android:gravity="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>