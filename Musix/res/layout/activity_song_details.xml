<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clouds"
    tools:context="org.upmobile.musix.activities.SongDetailsActivity">

    <LinearLayout
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/songDetail_CoverArt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/wet_asphalt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Title"
            android:id="@+id/songDetail_Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/wet_asphalt" />

        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Artist"
            android:id="@+id/songDetail_Artist"
            android:textColor="@color/wet_asphalt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/wet_asphalt" />

        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="AlbumName"
            android:textColor="@color/wet_asphalt"
            android:id="@+id/songDetail_Album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/wet_asphalt" />

        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Genre"
            android:textColor="@color/wet_asphalt"
            android:id="@+id/songDetail_Genre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
