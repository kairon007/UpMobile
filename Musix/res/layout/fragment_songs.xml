<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clouds"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".fragments.SongsFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" >

        <ListView
            android:id="@+id/listViewSongs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/wet_asphalt"
            android:dividerHeight="0.5dp" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/library_empty"
            android:textColor="@color/wet_asphalt"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/musicControllerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wet_asphalt"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:contentDescription="@string/next"
            android:padding="4dp"
            android:src="@drawable/ic_action_prev" />

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:contentDescription="@string/stop"
            android:padding="4dp"
            android:src="@drawable/ic_action_stop" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:contentDescription="@string/pause"
            android:padding="4dp"
            android:src="@drawable/ic_action_play" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:padding="4dp" >

            <ImageButton
                android:id="@+id/btnRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_item_bg"
                android:contentDescription="@string/shuffle"
                android:src="@drawable/ic_action_random" />

            <TextView
                android:id="@+id/txtShuffleMode"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btnRandom"
                android:layout_toEndOf="@+id/btnRandom"
                android:gravity="center"
                android:textColor="@color/blue_holo"
                android:textSize="16sp"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:contentDescription="@string/next"
            android:padding="4dp"
            android:src="@drawable/ic_action_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wet_asphalt"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/songStartTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/song_start_time"
            android:textColor="@color/clouds" />

        <SeekBar
            android:id="@+id/songSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/songTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/song_end_time"
            android:textColor="@color/clouds" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wet_asphalt"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/imageAlbumPlaying"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cover"
            android:padding="4dp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <TextView
                android:id="@+id/txtCurrentSongTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="@string/song_tittle"
                android:textColor="@color/blue_light" />

            <TextView
                android:id="@+id/txtCurrentSongArtistName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="@string/song_artist_name"
                android:textColor="@color/clouds" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>