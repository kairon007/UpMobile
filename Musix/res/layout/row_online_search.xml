<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp"
    android:minHeight="64dp"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <LinearLayout
        android:id="@+id/boxInfoItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_item_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingStart="8dp" >

        <ImageView
            android:id="@+id/cover"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:contentDescription="@string/default_cover"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" >

            <TextView
                android:id="@+id/artistLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/chunkTime"
                android:layout_toStartOf="@+id/chunkTime"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/chunkTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_size_title"
                android:visibility="visible" />

            <TextView
                android:id="@+id/titleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDownload"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selectable_item_bg"
        android:contentDescription="@string/expand"
        android:longClickable="true"
        android:scaleType="center"
        android:src="@drawable/icon_download" />

</LinearLayout>