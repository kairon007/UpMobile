<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.upmobile.musix.fragments.NavigationDrawerFragment" >

    <View
        android:id="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_holo" />

    <ListView
        android:id="@+id/navigation_drawer_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:background="@color/wet_asphalt"
        android:choiceMode="singleChoice"
        android:divider="@color/blue_holo"
        android:dividerHeight="1dp" >
    </ListView>

</RelativeLayout>