<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme.Custom" parent="Theme.AppCompat">
        <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
<!--         <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item> -->
        <item name="android:itemBackground">@color/wet_asphalt_alpha</item>
        <item name="colorPrimary">@color/wet_asphalt</item>
        <item name="colorPrimaryDark">@color/blue_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="alertDialogTheme">@style/ADTheme</item>
        <item name="alertDialogStyle">@style/ADStyle</item>
        <item name="android:dialogTheme">@color/wet_asphalt</item>
        <item name="download_dialog">@layout/download_dialog</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog</item>
        <item name="directory_chooser_tv_color">@android:color/white</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog</item>
    </style>

    <style name="MyListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/selectable_item_bg</item>
    </style>

    <style name="MyDropDownNav" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:popupBackground">@color/wet_asphalt</item>
        <item name="android:dropDownSelector">@drawable/selectable_item_bg</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/blue_holo</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- <style name="Theme.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog"> -->
    <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
    <!-- </style> -->

    <style name="ADTheme" parent="AlertDialog.AppCompat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:buttonBarButtonStyle">@style/dialogButtonBar</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/wet_asphalt</item>
    </style>

    <style name="ADStyle">
        <item name="android:background">@color/wet_asphalt</item>
        <item name="android:bottomDark">@color/wet_asphalt</item>
        <item name="android:bottomMedium">@color/wet_asphalt</item>
        <item name="android:topDark">@color/wet_asphalt</item>
    </style>
    
    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

</resources>