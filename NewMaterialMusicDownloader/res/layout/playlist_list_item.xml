<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_item_height"
    android:background="@android:color/white"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp"
    android:paddingLeft="8dp"
    android:orientation="horizontal"
    android:showDividers="middle" xmlns:app="http://schemas.android.com/apk/res/org.upmobile.newmaterialmusicdownloader">

    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ru.johnlife.lifetoolsmp3.ui.widget.CircularImageView
                android:id="@+id/item_cover"
                android:layout_width="@dimen/material_action_bar_hight"
                android:layout_height="@dimen/material_action_bar_hight"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_album_grey" />

            <LinearLayout
                android:id="@+id/item_box_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textTitle"
                        style="@style/TextStyleLine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/textDuration"
                        style="@style/TextStyleLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="00:00"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textHint"
                    style="@style/TextStyleLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:text="Artist" />
            </LinearLayout>
        </LinearLayout>
    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

</LinearLayout>