<?xml version="1.0" encoding="utf-8"?>
<ru.johnlife.lifetoolsmp3.ui.widget.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleRectangle"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingRight="8dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/customGroupIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:src="@drawable/ic_keyboard_arrow_down_white_18dp"
            android:tint="?attr/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTitle"
            style="@style/TextStyleLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1" />
    </LinearLayout>

</ru.johnlife.lifetoolsmp3.ui.widget.RippleView>