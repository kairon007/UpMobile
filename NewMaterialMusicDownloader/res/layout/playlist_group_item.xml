<?xml version="1.0" encoding="utf-8"?>
<com.csform.android.uiapptemplate.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.upmobile.newmaterialmusicdownloader"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingRight="8dp"
    app:rippleBackground="@android:color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/customGroupIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:src="@drawable/ic_keyboard_arrow_down_white_18dp"
            android:tint="?attr/colorPrimaryApp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTitle"
            style="@style/TextStyleLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1" />
    </LinearLayout>

</com.csform.android.uiapptemplate.view.MaterialRippleLayout>