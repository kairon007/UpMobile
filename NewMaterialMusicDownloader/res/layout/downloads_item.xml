<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_item_height"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <LinearLayout
        android:id="@+id/boxInfoItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="8dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ru.johnlife.lifetoolsmp3.ui.widget.CircularImageView
                android:id="@+id/cover"
                android:layout_width="@dimen/material_action_bar_hight"
                android:layout_height="@dimen/material_action_bar_hight"
                android:layout_gravity="center"
                android:contentDescription="@string/default_cover"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_album_grey" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/artistLine"
                        style="@style/TextStyleLine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="In The End"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/material_title" />

                    <TextView
                        android:id="@+id/titleLine"
                        style="@style/TextStyleLine2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Linkin Park" />
                </LinearLayout>

                <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
                    style="@style/RippleStyleCircle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/threeDot"
                        android:layout_width="@dimen/material_header_height"
                        android:layout_height="@dimen/material_header_height"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_action_overflow" />
                </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/item_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>