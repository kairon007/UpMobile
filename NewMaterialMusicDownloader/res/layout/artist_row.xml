<?xml version="1.0" encoding="utf-8"?>
<ru.johnlife.uilibrary.widget.customviews.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleRectangle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_item_height"
    android:background="@android:color/white"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


        <LinearLayout
            android:id="@+id/musicRowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <ru.johnlife.uilibrary.widget.customviews.CircleImageView
                android:id="@+id/cover"
                android:layout_width="@dimen/material_action_bar_hight"
                android:layout_height="@dimen/material_action_bar_hight"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_album_grey" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/titleLine"
                    style="@style/TextStyleLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/material_title" />

                <TextView
                    android:id="@+id/artistLine"
                    style="@style/TextStyleLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleLine"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </RelativeLayout>

            <!--<ImageView-->
                <!--android:id="@+id/playingIndicator"-->
                <!--android:layout_width="28dp"-->
                <!--android:layout_height="28dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:src="@drawable/ic_beat"-->
                <!--android:visibility="gone" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chunkTime"
                    style="@style/TextStyleLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:visibility="visible" />

                <!--<TextView-->
                    <!--android:id="@+id/infoView"-->
                    <!--style="@style/TextStyleLine2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="end"-->
                    <!--android:gravity="end"-->
                    <!--android:singleLine="true"-->
                    <!--android:textColor="@android:color/holo_green_light"-->
                    <!--android:visibility="gone" />-->
            </LinearLayout>

            <!--<ru.johnlife.uilibrary.widget.customviews.RippleView-->
            <!--style="@style/RippleStyleCircle"-->
            <!--android:layout_width="48dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_gravity="center_vertical">-->

            <!--<ImageView-->
            <!--android:id="@+id/threeDot"-->
            <!--android:layout_width="@dimen/material_header_height"-->
            <!--android:layout_height="@dimen/material_header_height"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/ic_action_overflow"-->
            <!--android:visibility="visible" />-->
            <!--</ru.johnlife.uilibrary.widget.customviews.RippleView>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/artisRowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clickable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/numberOfSongs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal|top"
                        android:gravity="center"
                        android:text="48"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textSongs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numberOfSongs"
                        android:layout_centerHorizontal="true"
                        android:text="Songs"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/artistRowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                style="@style/TextStyleLine1"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:text="Linkin Park"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ru.johnlife.uilibrary.widget.customviews.RippleView
                style="@style/RippleStyleCircle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0"
                android:visibility="gone"
                android:layout_gravity="center_vertical|right" >

                <ImageView
                    android:id="@+id/playAll"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    android:tint="?attr/colorPrimary" />
            </ru.johnlife.uilibrary.widget.customviews.RippleView>
        </LinearLayout>
    </FrameLayout>
</ru.johnlife.uilibrary.widget.customviews.RippleView>