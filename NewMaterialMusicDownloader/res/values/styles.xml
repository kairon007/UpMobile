<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="myPopupMenuStyle" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/main_color_background</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_color_grey_800</item>
    </style>
    
    <style name="AppThemeTrans" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="InfoSubText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/info_sub_text_color</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

    <style name="PlayerButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:minHeight">@dimen/playerbutton_height</item>
    </style>

    <style name="TextViewAppearance.Title" parent="TextViewAppearance.Title1">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TitleLineGray" parent="TextViewAppearance.Title">
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewApperance.Title.NoPadding" parent="TextViewAppearance.Title1">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>
    
    <style name="EditTextAppearance.Title" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/inverse_underline_edit_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextAppearance.Headline" parent="@android:style/Widget.EditText">
         <item name="android:background">@drawable/inverse_underline_edit_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextAppearance.Line" parent="@android:Widget.EditText">
        <item name="android:background">@drawable/underline_edit_text</item>
        <item name="android:textColor">@color/main_color_for_text</item>
        <item name="android:textColorHint">@color/main_color_for_text</item>
    </style>

    <style name="TextViewAppearance.Body" parent="TextViewAppearance.Body1">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewAppearance.Caption" parent="TextViewAppearance.Caption1">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="CaptionLineGray" parent="TextViewAppearance.Caption">
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewAppearance.Caption.NoPadding" parent="TextViewAppearance.Caption1">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewAppearance.Headline" parent="TextViewAppearance.Headline1">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewAppearance.Display" parent="TextViewAppearance.Display1">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="TextViewAppearence.Body" parent="TextViewAppearance.Body1">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/main_color_gray_text</item>
    </style>

    <style name="ProgressBarMaterial" parent="@style/ProgressBarStyle">
        <item name="barColor">@color/main_color_500</item>
        <item name="circleColor">@android:color/transparent</item>
        <item name="barWidth">4dp</item>
        <item name="rimWidth">4dp</item>
        <item name="spinSpeed">8dp</item>
        <item name="isSpinning">true</item>
        <item name="rimColor">@color/main_color_accent</item>
    </style>

    <style name="SeerkBar.Indeterminate" parent="@android:style/Widget.Holo.Light.SeekBar">
        <item name="android:thumb">@drawable/seekbar_selector</item>
        <item name="android:progressDrawable">@drawable/seekbar</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar</item>
        <item name="android:focusable">true</item>
    </style>

</resources>