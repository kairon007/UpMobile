<?xml version="1.0" encoding="utf-8"?>
<ru.johnlife.lifetoolsmp3.ui.widget.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleRectangle"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingRight="8dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingTop="8dp" >

        <com.csform.android.uiapptemplate.font.MusicTextView
            android:id="@+id/customGroupIndicator"
            style="@style/TextViewAppearance.CustomMusicButtons.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:padding="4dp"
            android:text="@string/font_arrow_down"
            android:textSize="16sp" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:id="@+id/textTitle"
            style="@style/TextViewAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1" />
    </LinearLayout>

</ru.johnlife.lifetoolsmp3.ui.widget.RippleView>