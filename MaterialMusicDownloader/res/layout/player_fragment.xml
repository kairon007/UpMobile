<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="4dp"
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:minHeight="48dp"
        android:orientation="horizontal" >

        <ru.johnlife.lifetoolsmp3.ui.widget.CheckBox
            android:id="@+id/cbUseCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp" />

        <TextView
            style="@style/TextViewAppearance.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/edit_mp3_use_album_cover"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/holo_transparent_button"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
                style="@style/RippleStyleRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/songNameBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ru.johnlife.lifetoolsmp3.ui.widget.font.RobotoTextView
                        android:id="@+id/songName"
                        style="@style/TextViewAppearance.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:lines="1"
                        android:singleLine="true" />

                    <com.csform.android.uiapptemplate.font.MusicTextView
                        style="@style/TextViewAppearance.CustomMusicButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/font_edit"
                        android:textSize="16sp" />
                </LinearLayout>
            </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

            <EditText
                android:id="@+id/songNameEdit"
                style="@style/EditTextAppearance.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
                style="@style/RippleStyleRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/artistNameBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ru.johnlife.lifetoolsmp3.ui.widget.font.RobotoTextView
                        android:id="@+id/artistName"
                        style="@style/TextViewAppearance.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:lines="1"
                        android:singleLine="true" />

                    <com.csform.android.uiapptemplate.font.MusicTextView
                        style="@style/TextViewAppearance.CustomMusicButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/font_edit"
                        android:textSize="16sp" />
                </LinearLayout>
            </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

            <EditText
                android:id="@+id/artistNameEdit"
                style="@style/EditTextAppearance.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/trackTime"
                style="@style/TextViewAppearance.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="start" />

            <TextView
                android:id="@+id/trackTotalTime"
                style="@style/TextViewAppearance.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="end" />

            <org.upmobile.materialmusicdownloader.ui.TrueSeekBar
                android:paddingTop="20dp"
                android:id="@+id/progress_track"
                style="@style/SeerkBar.Indeterminate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:max="100"
                android:progress="0" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="@dimen/playerbutton_height" >

        <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
            style="@style/RippleStyleCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <com.csform.android.uiapptemplate.font.MusicTextView
                android:id="@+id/shuffle"
                style="@style/TextViewAppearance.CustomMusicButtons.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/font_random"
                android:textSize="24sp" />
        </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

        <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
            style="@style/RippleStyleCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <com.csform.android.uiapptemplate.font.MusicTextView
                android:id="@+id/prev"
                style="@style/TextViewAppearance.CustomMusicButtons.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/font_previous"
                android:textSize="36sp" />
        </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

        <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
            style="@style/RippleStyleCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <com.csform.android.uiapptemplate.font.MusicTextView
                android:id="@+id/playpause"
                style="@style/TextViewAppearance.CustomMusicButtons.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/font_play"
                android:textSize="36sp" />
        </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

        <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
            style="@style/RippleStyleCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <com.csform.android.uiapptemplate.font.MusicTextView
                android:id="@+id/next"
                style="@style/TextViewAppearance.CustomMusicButtons.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/font_next"
                android:textSize="36sp" />
        </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

        <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
            style="@style/RippleStyleCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <com.csform.android.uiapptemplate.font.MusicTextView
                android:id="@+id/repeat"
                style="@style/TextViewAppearance.CustomMusicButtons.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/font_repeat"
                android:textSize="24sp" />
        </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>
    </LinearLayout>

    <ru.johnlife.lifetoolsmp3.ui.widget.RippleView
        style="@style/RippleStyleRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ru.johnlife.lifetoolsmp3.ui.widget.progressbutton.CircularProgressButton
            android:id="@+id/download"
            style="@style/CircularProgressBarStyle.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="48dp"
            android:text="@string/download_dialog_download" />
    </ru.johnlife.lifetoolsmp3.ui.widget.RippleView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" >

        <ru.johnlife.lifetoolsmp3.ui.widget.ProgressWheel
            android:id="@+id/lyrics_progress"
            style="@style/ProgressBar"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lyrics_text"
            style="@style/TextViewAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>