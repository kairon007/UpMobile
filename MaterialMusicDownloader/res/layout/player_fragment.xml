<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp" >

            <ImageView
                android:id="@+id/albumCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/no_cover_art_big" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/songInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/holo_transparent_button"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <FrameLayout
                    android:id="@+id/flSongContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" >

                    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                        android:id="@+id/songNameBox"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <com.csform.android.uiapptemplate.font.RobotoTextView
                            android:id="@+id/songName"
                            style="@style/TextViewAppearance.Headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/ic_action_edit"
                            android:ellipsize="marquee"
                            android:gravity="bottom"
                            android:lines="1"
                            android:text="Title of music" />
                    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                    <EditText
                        android:id="@+id/songNameEdit"
                        style="@style/EditTextAppearance.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textNoSuggestions"
                        android:visibility="gone" >

                        <requestFocus />
                    </EditText>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flArtistContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flSongContainer"
                    android:layout_centerHorizontal="true" >

                    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                        android:id="@+id/artistNameBox"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <com.csform.android.uiapptemplate.font.RobotoTextView
                            android:id="@+id/artistName"
                            style="@style/TextViewAppearance.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/ic_action_edit"
                            android:gravity="bottom"
                            android:text="name artist" />
                    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                    <EditText
                        android:id="@+id/artistNameEdit"
                        style="@style/EditTextAppearance.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flArtistContainer"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp" >

                    <TextView
                        android:id="@+id/trackTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/trackTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trackTime" >

                        <SeekBar
                            android:id="@+id/progress_track"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:progress="0" />

                        <ProgressBar
                            android:id="@+id/player_wait_song"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="true"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp" />
                    </FrameLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:minHeight="@dimen/playerbutton_height" >

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/shuffle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_shuffle" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/prev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_previous" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/playpause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_play" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/stop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_stop" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_next" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/repeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_repeat" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/volume_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp" >

                <SeekBar
                    android:id="@+id/progress_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:max="100"
                    android:progress="0" />

                <ImageView
                    android:id="@+id/volume_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_action_volume" />
            </RelativeLayout>

            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <com.csform.android.uiapptemplate.view.cpb.CircularProgressButton
                    android:id="@+id/download"
                    style="@style/CircularProgressBarStyle.Empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:text="@string/download" />
            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

            <FrameLayout
                android:id="@+id/player_lyrics_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/lyrics_load_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/ProgressBarStyle.Big"
                    android:src="@drawable/loader_black"
                    android:visibility="visible" />

                <com.csform.android.uiapptemplate.font.RobotoTextView
                    android:id="@+id/player_lyrics_view"
                    style="@style/TextViewAppearance.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>