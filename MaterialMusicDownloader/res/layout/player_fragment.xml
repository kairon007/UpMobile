<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:padding="16dp" >

            <ImageView
                android:id="@+id/albumCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/no_cover_art_big" />

            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                android:id="@+id/ripple_player_lyrics"
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" >

                <ImageButton
                    android:id="@+id/player_lyrics"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/selectable_item_bg"
                    android:src="@drawable/ic_player_lyrics" />
            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ripple_player_lyrics" >

                <ImageButton
                    android:id="@+id/player_edit_tags"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/selectable_item_bg"
                    android:src="@drawable/ic_player_edit" />
            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/songInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/holo_transparent_button"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <com.csform.android.uiapptemplate.font.RobotoTextView
                    android:id="@+id/songName"
                    style="@style/TextViewAppearance.Display2"
                    android:layout_alignParentTop="true"
                    android:ellipsize="marquee"
                    android:singleLine="true" />

                <com.csform.android.uiapptemplate.font.RobotoTextView
                    android:id="@+id/artistName"
                    style="@style/TextViewAppearance.Headline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/songName"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal" />

                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/artistName"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp" >

                    <TextView
                        android:id="@+id/trackTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/trackTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trackTime" >

                        <SeekBar
                            android:id="@+id/progress_track"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:progress="0" />

                        <ProgressBar
                            android:id="@+id/player_wait_song"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="true"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp" />
                    </FrameLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/shuffle"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_shuffle" />

                <ImageButton
                    android:id="@+id/prev"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_previous" />

                <ImageButton
                    android:id="@+id/playpause"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/stop"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_stop" />

                <ImageButton
                    android:id="@+id/next"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_next" />

                <ImageButton
                    android:id="@+id/repeat"
                    style="@style/PlayerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_repeat" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/volume_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp" >

                <SeekBar
                    android:id="@+id/progress_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:max="100"
                    android:progress="0" />

                <ImageView
                    android:id="@+id/volume_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_action_volume" />
            </RelativeLayout>

            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <com.csform.android.uiapptemplate.font.RobotoTextView
                    android:id="@+id/download"
                    style="@style/ButtonStyle.RaisedEmpty"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/download" />
            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

            <include
                android:id="@+id/player_edit_tag_dialog"
                layout="@layout/edit_tag"
                android:visibility="gone" />

            <include
                android:id="@+id/player_lyrics_frame"
                layout="@layout/lyrics_frame"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>