<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    	
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/albumCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_cover_art_big" />
            
            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:rippleColor="@color/main_color_grey_400" >

                <CheckBox
                    android:id="@+id/cbUseCover"
                    style="@style/CheckBoxStyle.Light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
					android:text="@string/edit_mp3_use_album_cover"/>

            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/holo_transparent_button"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                        android:id="@+id/songNameBox"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <com.csform.android.uiapptemplate.font.RobotoTextView
                            android:id="@+id/songName"
                            style="@style/TextViewAppearance.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/ic_action_edit"
                            android:gravity="bottom"
                            android:lines="1" />
                    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                    <EditText
                        android:id="@+id/songNameEdit"
                        style="@style/EditTextAppearance.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                        android:id="@+id/artistNameBox"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <com.csform.android.uiapptemplate.font.RobotoTextView
                            android:id="@+id/artistName"
                            style="@style/TextViewAppearance.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/ic_action_edit"
                            android:gravity="bottom"
                            android:lines="1" />
                    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                    <EditText
                        android:id="@+id/artistNameEdit"
                        style="@style/EditTextAppearance.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/trackTime"
                            style="@style/TextViewAppearance.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/trackTotalTime"
                            style="@style/TextViewAppearance.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/progress_track"
                        style="@style/SeerkBar.Indeterminate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:minHeight="@dimen/playerbutton_height" >

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/shuffle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_shuffle" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/prev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_previous" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/playpause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_play" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/stop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_stop" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_next" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

                <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/repeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_media_repeat" />
                </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
            </LinearLayout>

            <com.csform.android.uiapptemplate.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <com.csform.android.uiapptemplate.view.cpb.CircularProgressButton
                    android:id="@+id/download"
                    style="@style/CircularProgressBarStyle.Empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:minHeight="48dp"
                    android:minWidth="72dp"
                    android:text="@string/download" />
            </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">

                <ProgressBar
                    android:id="@+id/lyrics_progress"
                    style="@style/ProgressBarStyle.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/loader_black"
                    android:visibility="visible" />

                <com.csform.android.uiapptemplate.font.RobotoTextView
                    android:id="@+id/lyrics_text"
                    style="@style/TextViewAppearance.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>