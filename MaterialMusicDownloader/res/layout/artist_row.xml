<?xml version="1.0" encoding="utf-8"?>
<ru.johnlife.uilibrary.widget.customviews.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleRectangle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_item_height"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


        <LinearLayout
            android:id="@+id/musicRowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <org.upmobile.materialmusicdownloader.font.RobotoTextView
                        android:id="@+id/titleLine"
                        style="@style/TextViewAppearance.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true" />

                    <org.upmobile.materialmusicdownloader.font.RobotoTextView
                        android:id="@+id/artistLine"
                        style="@style/CaptionLineGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleLine"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </RelativeLayout>

                <!--<org.upmobile.materialmusicdownloader.font.MusicTextView-->
                <!--android:id="@+id/playingIndicator"-->
                <!--style="@style/TextViewAppearance.CustomMusicButtons.Colored"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_weight="0"-->
                <!--android:clickable="true"-->
                <!--android:gravity="center"-->
                <!--android:padding="4dp"-->
                <!--android:text="@string/font_beat"-->
                <!--android:textSize="24sp"-->
                <!--android:visibility="gone" />-->


                <TextView
                    android:id="@+id/chunkTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/main_color_grey_500" />
            </LinearLayout>

            <!--<ru.johnlife.uilibrary.widget.customviews.RippleView-->
            <!--style="@style/RippleStyleCircle"-->
            <!--android:layout_width="48dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_gravity="center_vertical" >-->

            <!--<org.upmobile.materialmusicdownloader.font.MusicTextView-->
            <!--android:id="@+id/threeDot"-->
            <!--style="@style/TextViewAppearance.CustomMusicButtons.Colored"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:clickable="true"-->
            <!--android:focusable="false"-->
            <!--android:focusableInTouchMode="false"-->
            <!--android:gravity="center"-->
            <!--android:padding="4dp"-->
            <!--android:text="@string/three_dot"-->
            <!--android:textSize="32sp" />-->
            <!--</ru.johnlife.uilibrary.widget.customviews.RippleView>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/artisRowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/numberOfSongs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal|top"
                        android:gravity="center"
                        android:text="48"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textSongs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numberOfSongs"
                        android:layout_centerHorizontal="true"
                        android:text="Songs"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/artistRowName"
                style="@style/TextViewAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:text="Linkin Park"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ru.johnlife.uilibrary.widget.customviews.RippleView
                style="@style/RippleStyleCircle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/playAll"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    android:tint="?attr/colorPrimary" />
            </ru.johnlife.uilibrary.widget.customviews.RippleView>
        </LinearLayout>
    </FrameLayout>
</ru.johnlife.uilibrary.widget.customviews.RippleView>