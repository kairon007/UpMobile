    <application
        android:name="org.kreed.musicdownloader.app.MusicDownloaderApp"
        android:backupAgent="PreferencesBackupAgent"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.kreed.musicdownloader.ui.activity.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.millennialmedia.android.MMActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />

        <meta-data
           android:name="com.google.android.gms.version"
           android:value="google_play_services_version" />
        
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIH6Xcxa4hn6sHN1m4jMpi4MFFFMP5sv3XhFuWeA" />

         <!-- MOBILECORE -->
        <service
            android:name="com.ironsource.mobilcore.MobileCoreReport"
            android:enabled="true"
            android:exported="false"
            android:process=":mcServiceProcess" />

        <receiver
            android:name="com.ironsource.mobilcore.InstallationTracker"
            android:enabled="true"
            android:process=":installationTracker" />
        
        <service android:name="PlayerService"></service>
        <!-- mopub ad -->
        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation" />
