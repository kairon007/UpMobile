<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AlertDialogItem">
		<item name="android:textColor">?android:textColorAlertDialogListItem</item>
	</style>
	<style name="Playback" parent="Theme">
		<item name="android:actionBarStyle">@style/PlaybackActionBar</item>
		<item name="android:windowBackground">@android:color/black</item>
	</style>
	<style name="Playback.White" parent="Theme.White">
		<item name="android:actionBarStyle">@style/PlaybackActionBar.White</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>
	
	<style name="BackActionBar" parent="Theme">
		<item name="android:actionBarStyle">@style/PlaybackActionBar</item>
	</style>
	<style name="BackActionBar.White" parent="Theme.White">
		<item name="android:actionBarStyle">@style/PlaybackActionBar.White</item>
	</style>
	
	<style name="Library" parent="Theme">
		<item name="android:actionBarStyle">@style/LibraryActionBar</item>
	</style>
	<style name="Library.White" parent="Theme.White">
		<item name="android:actionBarStyle">@style/LibraryActionBar.White</item>
	</style>
	<style name="PlaybackActionBar" parent="android:Widget.Holo.ActionBar">
		<item name="android:displayOptions">showTitle|homeAsUp</item>
	</style>
	<style name="PlaybackActionBar.White" parent="android:Widget.Holo.Light.ActionBar">
		<item name="android:displayOptions">showTitle|homeAsUp</item>
	</style>
	<style name="LibraryActionBar" parent="android:Widget.Holo.ActionBar">
		<item name="android:displayOptions"></item>
	</style>
	<style name="LibraryActionBar.White" parent="android:Widget.Holo.Light.ActionBar">
		<item name="android:displayOptions"></item>
	</style>
	
</resources>
