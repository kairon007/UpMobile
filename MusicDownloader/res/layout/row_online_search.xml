<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boxInfoItem"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/selectable_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="8dp" >

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/default_cover"
            android:scaleType="fitCenter"
            android:src="@drawable/fallback_cover" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/artistLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size_title" />

        <TextView
            android:id="@+id/titleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/chunkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size_title"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnDownload"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selectable_item_bg"
        android:contentDescription="@string/expand"
        android:longClickable="true"
        android:scaleType="center"
        android:src="?attr/icon_download" />

</LinearLayout>