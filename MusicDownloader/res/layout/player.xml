<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp"
    android:minHeight="@dimen/layout_library_height"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_item_bg"
        android:paddingLeft="@dimen/player_pading_side"
        android:paddingRight="@dimen/player_pading_side" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/player_play_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pading_button_play"
                android:src="@drawable/play" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/player_title_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/pading_min"
                    android:paddingTop="@dimen/pading_min"
                    android:text="title"
                    android:textSize="@dimen/text_library_page_size" />

                <TextView
                    android:id="@+id/player_duration_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/pading_min"
                    android:paddingTop="@dimen/pading_min"
                    android:text="time"
                    android:textSize="@dimen/text_library_page_size" />
            </FrameLayout>

            <ProgressBar
                android:id="@+id/player_progress_song"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="@dimen/pading_min"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>