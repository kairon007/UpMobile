<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="android:Theme.NoTitleBar" />

    <style name="AppThemeBase.White" parent="android:Theme.Light.NoTitleBar" />

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="tab_page_indicator_textview">@color/tab_page_indicator_textview</item>
        <item name="search_background">@color/window_background_dark</item>
        <item name="icon_ok">@drawable/icon_ok</item>
        <item name="icon_cancel">@drawable/icon_cancel</item>
    </style>

    <style name="AppTheme.Black" parent="AppThemeBase">
        <item name="android:windowBackground">@color/window_background_black</item>
        <item name="tab_page_indicator_textview">@color/tab_page_indicator_textview_white</item>
        <item name="icon_ok">@drawable/icon_ok</item>
        <item name="icon_cancel">@drawable/icon_cancel</item>
    </style>

    <style name="AppTheme.White" parent="AppThemeBase.White">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="tab_page_indicator_textview">@color/tab_page_indicator_textview</item>
        <item name="icon_ok">@drawable/icon_ok_black</item>
        <item name="icon_cancel">@drawable/icon_cancel_black</item>
        <item name="search_background">@drawable/search_background_white</item>
    </style>

    <style name="Library" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Library.White" parent="AppTheme.White">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Library.Black" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Playback" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Playback.White" parent="AppTheme.White">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="BackActionBar" parent="AppTheme" />

    <style name="BackActionBar.White" parent="AppTheme.White" />

    <style name="BackActionBar.Black" parent="AppTheme.Black" />

    <style name="AlertDialogItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>