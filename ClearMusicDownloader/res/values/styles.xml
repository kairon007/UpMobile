<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="miniPlayerPlay">@drawable/mini_player_play_dark</item>
        <item name="miniPlayerPause">@drawable/mini_player_pause_dark</item>
        <item name="miniPlayerDownload">@drawable/mini_player_download_dark</item>
        <item name="coverScale">@dimen/size_cover</item>
    </style>

    <style name="AppThemeTrans" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_close_ab</item>
        <item name="searchIcon">@drawable/ic_search_ab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>