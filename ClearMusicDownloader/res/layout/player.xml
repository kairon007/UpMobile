<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.special.DetailActivity" >

    <com.special.utils.UIParallaxScroll
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:backgroundView="@+id/imageView"
        app:headerView="@+id/layout_top" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/player_cover"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/player_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:text="Clean Music Downloader Player"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <View
                    android:id="@+id/player_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/theme_color"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp" >

                    <ImageButton
                        android:id="@+id/player_lyrics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/button_selector_inverse"
                        android:src="@drawable/ic_player_lyrics" />

                    <TextView
                        android:id="@+id/player_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/player_edit_tags"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:lines="1"
                        android:textSize="25dp" />

                    <ImageButton
                        android:id="@+id/player_edit_tags"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/player_lyrics"
                        android:background="@drawable/button_selector_inverse"
                        android:src="@drawable/ic_player_edit" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/player_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <TextView
                        android:id="@+id/player_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:lines="1"
                        android:text="0:00" />

                    <SeekBar
                        android:id="@+id/player_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:progressDrawable="@drawable/progress"
                        android:thumb="@drawable/checkbox" />

                    <TextView
                        android:id="@+id/player_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:lines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageButton
                        android:id="@+id/player_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_inverse"
                        android:src="@drawable/previous" />

                    <ImageButton
                        android:id="@+id/player_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_inverse"
                        android:src="@drawable/play" />

                    <ImageButton
                        android:id="@+id/player_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_inverse"
                        android:src="@drawable/forward" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" >

                    <Button
                        android:id="@+id/player_download"
                        style="@style/UIButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="3dp"
                        android:text="@string/download" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true" >

                <include
                    android:id="@+id/player_edit_tag_dialog"
                    layout="@layout/edit_tag"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/player_lyrics_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/player_lyrics_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/dashed_area_text" />

                <Button
                    android:id="@+id/player_cancel_lyrics"
                    style="@style/UIButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/edit_mp3_cancel" />
            </LinearLayout>
        </LinearLayout>
    </com.special.utils.UIParallaxScroll>

</RelativeLayout>