<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="search_bg">@drawable/selectable_item_bg</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="download_dialog">@layout/download_dialog</item>
        <item name="choise_engines_layout_bg">@drawable/selectable_item_bg</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog</item>
        <item name="directory_chooser_tv_color">@android:color/white</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="coverScale">@dimen/size_cover</item>
        <item name="dropDownViewResource">@android:layout/simple_spinner_dropdown_item</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialog.White" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog" />

    <style name="AppThemeBase.White" parent="android:Theme.Light.NoTitleBar" />

    <style name="AppTheme.Black" parent="AppBaseTheme">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="search_bg">@drawable/search_background</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="download_dialog">@layout/download_dialog</item>
        <item name="choise_engines_layout_bg">@drawable/search_background</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog</item>
        <item name="directory_chooser_tv_color">@android:color/white</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="coverScale">@dimen/size_cover</item>
        <item name="dropDownViewResource">@android:layout/simple_spinner_dropdown_item</item>
    </style>

    <style name="AppTheme.White" parent="AppThemeBase.White">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="listview_divider">@drawable/layout_divider</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="search_bg">@android:color/white</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="choise_engines_layout_bg">@drawable/spinner_background</item>
        <item name="fallback_cover">@drawable/fallback_cover_white</item>
        <item name="row_online_search">@layout/row_online_search_white</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog_white</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog_white</item>
        <item name="directory_chooser_tv_color">@android:color/black</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play_white</item>
        <item name="pause">@drawable/pause_white</item>
        <item name="editorDialog">@layout/editor_dialog_white</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.White</item>
        <item name="dropDownViewResource">@android:layout/simple_spinner_dropdown_item</item>
    </style>

    <style name="AppTheme.White2" parent="AppThemeBase.White">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="listview_divider_height">@dimen/list_devider_height_0</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="search_bg">@android:color/white</item>
        <item name="choise_engines_layout_bg">@drawable/spinner_background</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search_white2</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog_white</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog_white</item>
        <item name="directory_chooser_tv_color">@android:color/black</item>
        <item name="lyrics_view">@layout/lyrics_view_white</item>
        <item name="play">@drawable/play_white</item>
        <item name="pause">@drawable/pause_white</item>
        <item name="editorDialog">@layout/editor_dialog_white</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.White</item>
        <item name="dropDownViewResource">@android:layout/simple_spinner_dropdown_item</item>
    </style>


</resources>