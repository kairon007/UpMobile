<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="search_bg">@drawable/selectable_item_bg</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="choise_engines_layout_bg">@drawable/search_background</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog</item>
        <item name="directory_chooser_tv_color">@android:color/white</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="coverScale">@dimen/size_cover</item>
    </style>
    
    <style name="AlertDialog" parent="@android:style/Theme.Dialog">        
    	<item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AlertDialog.White" parent="@android:style/Theme.Dialog">
    	<item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog" />

    <style name="AppThemeBase.White" parent="android:Theme.Light.NoTitleBar" />
    
    <style name="AppTheme.Black" parent="AppBaseTheme">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="search_bg">@drawable/selectable_item_bg</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="choise_engines_layout_bg">@drawable/search_background</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog</item>
        <item name="directory_chooser_tv_color">@android:color/white</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="coverScale">@dimen/size_cover</item>
    </style>

    <style name="AppTheme.White" parent="AppThemeBase.White">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="listview_divider">@drawable/layout_divider</item>
        <item name="listview_divider_height">@dimen/list_devider_height_1</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="search_bg">@android:color/white</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="choise_engines_layout_bg">@drawable/spinner_background</item>
        <item name="fallback_cover">@drawable/fallback_cover_white</item>
        <item name="row_online_search">@layout/row_online_search_white</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog_white</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog_white</item>
        <item name="directory_chooser_tv_color">@android:color/black</item>
        <item name="lyrics_view">@layout/lyrics_view</item>
        <item name="play">@drawable/play_white</item>
        <item name="pause">@drawable/pause_white</item>
        <item name="editorDialog">@layout/editor_dialog_white</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.White</item>
    </style>

    <style name="AppTheme.White2" parent="AppThemeBase.White">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="listview_divider">@color/divider_color</item>
        <item name="listview_divider_height">@dimen/list_devider_height_0</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="search_bg">@android:color/white</item>
        <item name="choise_engines_layout_bg">@drawable/spinner_background</item>
        <item name="download_dialog">@layout/download_dialog_white</item>
        <item name="fallback_cover">@drawable/fallback_cover</item>
        <item name="row_online_search">@layout/row_online_search_white2</item>
        <item name="dir_chooser_dialog">@layout/dir_chooser_dialog_white</item>
        <item name="new_folder_dialog">@layout/new_folder_dialog_white</item>
        <item name="directory_chooser_tv_color">@android:color/black</item>
        <item name="lyrics_view">@layout/lyrics_view_white</item>
        <item name="play">@drawable/play</item>
        <item name="pause">@drawable/pause</item>
        <item name="editorDialog">@layout/editor_dialog_white</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.White</item>
    </style>

    <style name="DefaultSeekBar" parent="android:Widget">
        <item name="dsb_indicatorTextAppearance">@style/DefaultIndicatorTextAppearance</item>
        <item name="dsb_progressColor">@color/dsb_progress_color_list</item>
        <item name="dsb_trackColor">@color/dsb_track_color_list</item>
        <item name="dsb_rippleColor">@color/dsb_ripple_color_list</item>
        <item name="dsb_indicatorColor">@color/dsb_progress_color</item>
        <item name="dsb_indicatorElevation">4dp</item>
        <item name="dsb_mirrorForRtl">true</item>
        <item name="dsb_timeFormatt">true</item>
    </style>

    <style name="DefaultIndicatorTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">6dp</item>
    </style>

    <declare-styleable name="CheckBox">
        <attr name="checkbox_color" format="color" />
        <attr name="checkbox_checked_color" format="color" />
    </declare-styleable>

    <style name="MD_Light" parent="Theme_Light_Dialog">
        <item name="md_divider">@color/md_divider_black</item>
        <item name="md_list_selector">@drawable/md_selector</item>
        <item name="md_btn_stacked_selector">@drawable/md_selector</item>
        <item name="md_btn_positive_selector">@drawable/md_btn_selector</item>
        <item name="md_btn_neutral_selector">@drawable/md_btn_selector</item>
        <item name="md_btn_negative_selector">@drawable/md_btn_selector</item>
    </style>

    <style name="MD_Dark" parent="android:Theme.Dialog">
        <item name="md_divider">@color/md_divider_white</item>
        <item name="md_list_selector">@drawable/md_selector</item>
        <item name="md_btn_stacked_selector">@drawable/md_selector</item>
        <item name="md_btn_positive_selector">@drawable/md_btn_selector_dark</item>
        <item name="md_btn_neutral_selector">@drawable/md_btn_selector_dark</item>
        <item name="md_btn_negative_selector">@drawable/md_btn_selector_dark</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MD_ActionButtonStacked" parent="@style/MD_ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/md_button_padding_horizontal_internalexternal</item>
        <item name="android:paddingRight">@dimen/md_button_padding_horizontal_internalexternal</item>
    </style>

    <style name="MD_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MD_ActionButton.Text">

        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:textSize">@dimen/md_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/md_button_min_width</item>
        <item name="android:paddingLeft">@dimen/md_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/md_button_textpadding_horizontal</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <!-- Light dialog theme for devices prior Honeycomb -->
    <style name="Theme_Light_Dialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EditTextAppearance.Line.Inverse" parent="@android:Widget.EditText">
        <item name="android:background">@drawable/inverse_underline_edit_text</item>
        <item name="android:textColor">@color/main_color_for_text</item>
        <item name="android:textColorHint">@color/main_color_for_text</item>
    </style>

    <style name="EditTextAppearance.Headline" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/inverse_underline_edit_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="matProg_progressIndeterminate">true</item>
        <item name="matProg_spinSpeed">0.8</item>
        <item name="matProg_barSpinCycleTime">2000</item>
        <item name="matProg_barColor">@color/main_color_accent</item>
    </style>
    
        <declare-styleable name="ProcessButton">
        <attr name="pb_textProgress" format="string" />
        <attr name="pb_textComplete" format="string" />
        <attr name="pb_textError" format="string" />
        <attr name="pb_colorProgress" format="color" />
        <attr name="pb_colorComplete" format="color" />
        <attr name="pb_colorError" format="color" />
    </declare-styleable>

    <declare-styleable name="FlatButton">
        <attr name="pb_colorPressed" format="color" />
        <attr name="pb_colorNormal" format="color" />
        <attr name="pb_cornerRadius" format="dimension" />
    </declare-styleable>
    

</resources>