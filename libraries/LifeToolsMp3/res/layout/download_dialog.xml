<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/download_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/layout_divider"
        android:orientation="vertical"
        android:showDividers="middle"
        android:visibility="visible" >

        <ru.johnlife.lifetoolsmp3.ui.ScrollingTextView
            android:id="@+id/download_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_middle"
            android:layout_marginTop="@dimen/padding_middle"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/size_cover"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="@dimen/size_cover"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_middle_layout"
                android:background="#1000" >

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="@dimen/size_cover"
                    android:maxWidth="@dimen/size_cover"
                    android:scaleType="centerInside"
                    android:src="@drawable/default_cover" />

                <ProgressBar
                    android:id="@+id/coverProgress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="@dimen/size_middle"
                    android:layout_height="@dimen/size_middle"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/wait_song_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:animateLayoutChanges="true" >

                <ProgressBar
                    android:id="@+id/spinner"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/box_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/pause"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/clear_clickable"
                        android:src="@drawable/pause"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:text="00:00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/dialog_text_size_btn" />

                        <ProgressBar
                            android:id="@+id/progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_progress"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:padding="@dimen/padding_middle" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/layout_divider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:divider="@drawable/layout_divider"
                android:minHeight="@dimen/size_cover"
                android:orientation="vertical"
                android:showDividers="middle" >

                <LinearLayout
                    android:id="@+id/row_lyrics"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/selectable_item_bg"
                    android:clickable="true" >

                    <ImageButton
                        android:id="@+id/button_show_lyrics"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:src="@drawable/lyrics_icon" />

                    <TextView
                        android:id="@+id/tv_show_lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/show_lyrics"
                        android:textSize="@dimen/dialog_text_size_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/selectable_item_bg"
                    android:clickable="true" >

                    <ImageButton
                        android:id="@+id/button_edit_mp3_tag"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:src="@android:drawable/ic_menu_edit" />

                    <TextView
                        android:id="@+id/tv_edit_mp3_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/edit_mp3_tags"
                        android:textSize="@dimen/dialog_text_size_btn" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/download_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/spiner_path_download"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/padding_middle"
                android:gravity="left|center_vertical"
                android:text="@string/header_download"
                android:textSize="@dimen/dialog_text_size_btn"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_path_download"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/spiner_path_download"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/padding_middle"
                android:layout_toRightOf="@+id/spiner_path_download"
                android:layout_weight="1"
                android:drawableRight="@drawable/threedot"
                android:ellipsize="start"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="@string/header_download"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/dialog_text_size_btn" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>