<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider_color_white"
    android:minHeight="64dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_little"
    android:paddingLeft="@dimen/padding_little"
    android:paddingRight="@dimen/padding_little"
    android:paddingTop="@dimen/padding_little" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:divider="@drawable/layout_divider"
        android:showDividers="middle" >

        <LinearLayout
            android:id="@+id/boxInfoItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg_white"
            android:clickable="true" >

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:text="29"
                        android:visibility="gone"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/number"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:text="tracks"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_layout"
                android:paddingLeft="@dimen/padding_middle"
                android:paddingRight="@dimen/padding_middle"
                android:paddingTop="@dimen/padding_layout" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/titleLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="In The End"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/artistLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="Linkin Park"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_text_padding" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxHeight="8dp"
                            android:paddingRight="@dimen/padding_layout"
                            android:src="@drawable/watch" />

                        <TextView
                            android:id="@+id/chunkTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:singleLine="true"
                            android:text="3:52"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="@dimen/font_size_normal"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnDownload"
            android:layout_width="56dp"
            android:layout_height="72dp"
            android:background="@drawable/selectable_item_bg_white"
            android:contentDescription="@string/expand"
            android:longClickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_download_black" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>