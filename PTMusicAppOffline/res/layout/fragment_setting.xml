<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight.Vertical"
    android:background="@android:color/white"
    tools:context=".fragment.SettingsFragment" >

    <include layout="@layout/layout_header" />

    <org.upmobile.musicpro.widget.AutoBgLinearLayout
        android:id="@+id/layoutLanguage"
        style="@style/Layout.FillWidth.Vertical"
        android:background="@drawable/bg_white"
        android:visibility="gone"
        android:padding="10dp" >

        <TextView
            android:id="@+id/lblLanguage"
            style="@style/Text.Title.Black"
            android:layout_marginBottom="5dp"
            android:text="@string/language" />

        <TextView
            android:id="@+id/lblLanguageSelect"
            style="@style/Text.Content.DarkerGray"
            android:text="@string/vietnamese" />
    </org.upmobile.musicpro.widget.AutoBgLinearLayout>

</LinearLayout>