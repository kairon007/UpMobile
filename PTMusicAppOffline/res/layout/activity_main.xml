<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight"
    tools:context=".activity.MainActivity" >
    
    <LinearLayout
        android:id="@+id/cross_promo_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:padding="3dp"
        android:visibility="gone" >

            <ImageView
                android:id="@+id/cross_promo_box_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cross_promo_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cross_promo_box_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/cross_promo_box_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="" />
        </LinearLayout>

    <fragment
        android:id="@+id/fragmentListSongs"
        android:name="org.upmobile.musicpro.fragment.ListSongsFragment"
        style="@style/Layout.FillWidthHeight" />

    <fragment
        android:id="@+id/fragmentCategoryMusic"
        android:name="org.upmobile.musicpro.fragment.CategoryMusicFragment"
        style="@style/Layout.FillWidthHeight" />

    <fragment
        android:id="@+id/fragmentPlaylist"
        android:name="org.upmobile.musicpro.fragment.PlaylistFragment"
        style="@style/Layout.FillWidthHeight" />

    <fragment
        android:id="@+id/fragmentSearch"
        android:name="org.upmobile.musicpro.fragment.SearchFragment"
        style="@style/Layout.FillWidthHeight" />

    <fragment
        android:id="@+id/fragmentSetting"
        android:name="org.upmobile.musicpro.fragment.SettingsFragment"
        style="@style/Layout.FillWidthHeight" />
    
    <fragment
        android:id="@+id/fragmentSearchOnline"
        android:name="org.upmobile.musicpro.fragment.OnlineSearchFragment"
        style="@style/Layout.FillWidthHeight" />
    
    <fragment
        android:id="@+id/fragmentLibrary"
        android:name="org.upmobile.musicpro.fragment.LibraryFragment"
        style="@style/Layout.FillWidthHeight"
        />

    <fragment
        android:id="@+id/fragmentPlayer"
        android:name="org.upmobile.musicpro.fragment.PlayerFragment"
        style="@style/Layout.FillWidthHeight" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutPlayerFooter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/adView"
            android:background="@drawable/bg_player_footer"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgSongFooter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_music_node_small" />

            <LinearLayout
                style="@style/Layout.Weight.Width"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblSongNameFooter"
                    style="@style/Text.Title.White"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="@string/app_name" />

                <TextView
                    android:id="@+id/lblArtistFooter"
                    style="@style/Text.Content.White"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/app_name" />
            </LinearLayout>

            <org.upmobile.musicpro.widget.AutoBgButton
                android:id="@+id/btnPreviousFooter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_previous_small" />

            <org.upmobile.musicpro.widget.AutoBgButton
                android:id="@+id/btnPlayFooter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_pause_small" />

            <org.upmobile.musicpro.widget.AutoBgButton
                android:id="@+id/btnNextFooter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_next_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>