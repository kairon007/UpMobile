<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
        <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
    </style>

    <style name="Text.Menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Control">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="android:fullDark">@color/bg_item_song</item>
        <item name="android:bottomDark">@color/bg_item_song</item>
        <item name="android:bottomMedium">@color/bg_item_song</item>
        <item name="android:centerDark">@color/bg_item_song</item>
        <item name="android:topDark">@color/bg_item_song</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:showDividers">middle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonBarButtonStyle">@style/dialogButtonBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    
    <style name="dialogButtonBar">
    	<item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>