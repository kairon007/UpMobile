    <style name="Theme.White_action_bar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_white_acton_bar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.White_acton_bar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.White_acton_bar</item>
